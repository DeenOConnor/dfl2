	"configurations": [
	 	{
			"name": "dfl_debug",
			"targetType": "library",
			 "targetPath" : "debug",
			"targetName": "dfl_debug",
            "libs":[
            		"ole32",
            		"oleAut32",
            		"gdi32",
            		"comctl32",
            		"comdlg32",
            		"advapi32",
            		"uuid",
            		"ws2_32"
            		]
		},
			 
		{
			"name": "dfl",
			"targetType": "library",
			 "targetPath" : "release",
			"targetName": "dfl",
            "libs":[
            		"ole32.lib",
            		"oleAut32.lib",
            		"gdi32.lib",
            		"comctl32.lib",
            		"comdlg32.lib",
            		"advapi32.lib",
            		"uuid.lib",
            		"ws2_32.lib"
            		]
		},
		{
			"name": "dflexe",
			"targetType": "executable",
			 "targetPath" : "release",
			"mainSourceFile": "source/dfl_exe/dfl_exe.d",
			"lflags": ["/subsystem:console"],
			"targetName": "dfl_Release",
			 "libs":[
					"dfl",
			 		"ole32",
            		"oleAut32",
            		"gdi32",
            		"comctl32",
            		"comdlg32",
            		"advapi32",
            		"uuid",
            		"ws2_32"
			 ]
		},

	]
